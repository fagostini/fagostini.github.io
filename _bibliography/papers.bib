journal = {bioRxiv},
pages = {2020.01.08.898478},
publisher = {Cold Spring Harbor Laboratory},
title = {{Intergenic RNA mainly derives from nascent transcripts of known genes}},
url = {http://biorxiv.org/content/early/2020/01/09/2020.01.08.898478.abstract},
year = {2020},
abbr = {BIORXIV},
selected = {true}
}
@article{girelli2020gpseq,
